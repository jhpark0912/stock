# Gemini API Key (필수)
GEMINI_API_KEY=your_gemini_api_key_here

# FRED API Key (경제 지표용, 선택)
# 발급: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# ECOS API Key (한국은행 경제통계시스템, 선택)
# 발급: https://ecos.bok.or.kr/ (회원가입 후 API 키 발급)
ECOS_API_KEY=your_ecos_api_key_here

# Environment
ENVIRONMENT=production

# Backend Server
HOST=0.0.0.0
PORT=8000

# CORS Origins
ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://frontend

# Mock Data (429 에러 회피용, true/false)
USE_MOCK_DATA=false

# Logging
# 로그 레벨: DEBUG, INFO, WARNING, ERROR, CRITICAL
# DEBUG: 상세한 디버깅 정보 (요청/응답 상세, DB 경로 등)
# INFO: 일반 정보 (기본값)
# WARNING: 경고 및 에러만 표시
LOG_LEVEL=INFO

# JWT 설정
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# 암호화 키 (API 키 암호화용, 필수)
# 생성 방법: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_key_here

# 한국투자증권 API (Admin 전용 - 환경변수 키)
# 발급: https://apiportal.koreainvestment.com
# 일반 유저는 설정 페이지에서 직접 입력
KIS_APP_KEY=your_kis_app_key_here
KIS_APP_SECRET=your_kis_app_secret_here

# Admin 기본 계정
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# GCP Secret Manager (선택적)
# true로 설정하면 민감한 키를 GCP Secret Manager에서 가져옴
# false면 .env 파일 사용 (기본값)
USE_SECRET_MANAGER=false
GCP_PROJECT_ID=your-gcp-project-id
