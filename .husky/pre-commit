#!/bin/sh

# ============================================
# Pre-commit Hook
# ============================================

# 색상 정의
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

# 현재 브랜치 확인
BRANCH=$(git rev-parse --abbrev-ref HEAD)

# main/master 브랜치 직접 커밋 경고
if [ "$BRANCH" = "main" ] || [ "$BRANCH" = "master" ]; then
    echo "${YELLOW}⚠️  경고: main/master 브랜치에 직접 커밋하려고 합니다!${NC}"
    echo "${YELLOW}   feature 브랜치 사용을 권장합니다.${NC}"
    echo ""
    read -p "계속하시겠습니까? (y/N): " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo "${RED}커밋이 취소되었습니다.${NC}"
        exit 1
    fi
fi

# PROJECT_STRUCTURE.md 업데이트 확인 (선택적)
# 새 파일이 추가된 경우 알림
STAGED_FILES=$(git diff --cached --name-only --diff-filter=A)
if [ -n "$STAGED_FILES" ]; then
    echo "${GREEN}📝 새로운 파일이 추가되었습니다:${NC}"
    echo "$STAGED_FILES" | head -5
    if [ $(echo "$STAGED_FILES" | wc -l) -gt 5 ]; then
        echo "   ... 외 $(( $(echo "$STAGED_FILES" | wc -l) - 5 ))개"
    fi
    echo ""
    echo "${YELLOW}💡 .claude/PROJECT_STRUCTURE.md 업데이트가 필요할 수 있습니다.${NC}"
    echo ""
fi

exit 0
